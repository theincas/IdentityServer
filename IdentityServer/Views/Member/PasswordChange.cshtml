@model PasswordChangeViewModel

@{
    ViewData["Title"] = "PasswordChange";
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<div class="col-md-6 offset-md-3">

    <h2>Şifre Yenileme</h2>
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

    <form method="post">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-info" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }


        <div class="row mb-3">
            <label for="" class="col-sm-2 col-form-label" asp-for="PasswordOld">Eski Şifre</label>
            <div class="col-md-8">
                <input class="form-control" asp-for="PasswordOld">
                <span class="text-danger" asp-validation-for="PasswordOld"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label for="" class="col-sm-2 col-form-label" asp-for="PasswordNew">Yeni Şifre</label>
            <div class="col-md-8">
                <input class="form-control" asp-for="PasswordNew">
                <span class="text-danger" asp-validation-for="PasswordNew"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label for="" class="col-sm-2 col-form-label" asp-for="PasswordConfirm">Şifre Tekrar</label>
            <div class="col-md-8">
                <input class="form-control" asp-for="PasswordConfirm">
                <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
            </div>
        </div>
        <div class="col-md-8 offset-md-2">
            <button type="submit" class="btn btn-primary">Şifre Değiştir</button>
        </div>

    </form>
</div>
