@model List<AdminModel.UserViewModel>
@{
    ViewData["Title"] = "UserList";
}
<h1>Üye Liste</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Roller</th>
            <th>Rol İşlemleri</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            <tr>
                <td>@item.UserId</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>
                    <user-role-names user-id="@item.UserId"></user-role-names>
                </td>
                <td>
                    <a asp-area="admin" asp-controller="Roles" asp-action="AssignRoleToUser" asp-route-id="@item.UserId">Rol Ata</a>
                </td>
            </tr>
        }
    </tbody>
</table>
