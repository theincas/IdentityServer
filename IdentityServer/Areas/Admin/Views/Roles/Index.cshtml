@model List<AdminModel.RoleViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-6 offset-md-2">
        <h2>Rol Listesi</h2>
    </div>
    <div class="col-md-2">

        <a class="btn btn-primary ms-1" asp-controller="Roles" asp-action="RoleCreate" asp-area="admin">Role Ekle</a>
    </div>
</div>
<div class="row">
    
    <div class="col-md-8 offset-md-2">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-info" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Rol Adı</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <a class="btn btn-secondary btn-sm" asp-area="admin" asp-controller="Roles" asp-action="RoleUpdate" asp-route-id="@item.Id">Rol Güncelle</a>
                        </td>
                        <td>
                            <a class="btn btn-danger btn-sm" asp-area="admin" asp-controller="Roles" asp-action="RoleDelete" asp-route-id="@item.Id">Rol Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


